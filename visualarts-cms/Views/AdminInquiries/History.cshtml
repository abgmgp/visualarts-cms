@model List<visualarts_cms.Models.Viewmodel.InquiryViewModel>

@{
    ViewBag.Title = "Inquiry History";
}

<div>
    <div>
        <div class="head my-lg-4 fw-bolder">
            <h3>Inquiry History</h3>
        </div>
        <div class="d-flex justify-content-between my-4">
            <div>
                <a href="@Url.Action("Index", "AdminInquiries")" class="btn btn-warning" role="button" id="restoreBtn"><i class ="bi bi-box-arrow-in-left"></i> Back to Inquiries</a>
            </div>
        </div>
        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th></th>
                    <th style="display: none;"></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date of Inquiry</th>
                    <th style="width: 50px;" class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td style="display: none;">@Html.DisplayFor(m => item.InquiryId)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Email)</td>
                        <td>@Html.DisplayFor(m => item.CreatedDateStr)</td>
                        <td style="width: 50px;"><a href="@Url.Action("ViewHistory", "AdminInquiries", new {id = item.InquiryId})" class="btn btn-primary" role="button"><i class="bi bi-file-earmark-richtext-fill"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
