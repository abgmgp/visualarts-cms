@model IList<visualarts_cms.Models.Viewmodel.CurrentTrendViewModel>

@{
    ViewBag.Title = "Current Trends";

    <style>
        body {
            background-color: #3e5879;
        }

        .trend-card {
            transition: all 0.3s ease-in-out;
        }

        .trend-container:hover .trend-card {
            filter: brightness(0.3) blur(3px);
            opacity: 0.7;
        }

        .trend-container:hover .trend-card:hover {
            transform: scale(1.1);
            filter: brightness(1) blur(0);
            opacity: 1;
            z-index: 2;
        }
    </style>
}

<div>
    <div name="heading" class="text-white text-center">
        <h1 class="fw-bold">CURRENT TRENDS IN VISUAL ARTS</h1>
        <p class="my-3">The world of visual arts is rapidly evolving, with innovative technologies and new perspectives shaping the landscape of creative expression. As we move through 2024, trends such as AI-generated art, virtual and augmented reality, NFTs, glitch art, interactive creations, hyperrealism, and social commentary are reshaping how we understand and experience art. These developments are not just enhancing traditional practices but are pushing boundaries, challenging the status quo, and offering artists new platforms for collaboration, exploration, and activism. Let’s delve into these trends that are defining the future of visual arts.</p>
    </div>
    <br />
    <div name="trends" class="my-1">
        <div class="container justify-content-center">
            <div class="row row-cols-5 my-4 trend-container">
                @foreach (var item in Model)
                {
                    <a class="col text-center my-1 trend-card" href="@Url.Action("Read", "CurrentTrends", new {id = item.CurrentTrendId})">
                        <div class="position-relative overflow-hidden rounded" style="height: 250px; width: 250px; position: relative;">
                            <img src="~/Content/Upload/Image/@item.ImagePath"
                                 class="img-fluid object-fit-cover"
                                 style="width: 100%; height: 100%; object-fit: cover; display: block;" />
                            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));"></div>
                            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 24px; font-weight: bold; text-align: center;">
                                <span class="text-uppercase">@item.Title</span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>